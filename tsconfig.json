{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2018"],
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
